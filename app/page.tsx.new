          className="bg-gradient-to-r from-emerald-600 to-blue-600 rounded-2xl p-8 text-white mb-16"
          initial={{ opacity: 0, y: 20 }}
          animate={{ opacity: 1, y: 0 }}
          transition={{ duration: 0.5, delay: 0.3 }}
        >
          <div className="max-w-4xl mx-auto text-center">
            <div className="flex items-center justify-center space-x-2 mb-4">
              <Clock className="w-6 h-6" />
              <h2 className="text-2xl font-bold">Today's Prayer Times</h2>
            </div>
            <p className="mb-6 text-emerald-100">
              Check the prayer times for your location and never miss a prayer again.
            </p>
            <Link 
              href="/prayer-times"
              className="inline-flex items-center justify-center px-6 py-3 bg-white text-emerald-700 font-medium rounded-lg hover:bg-opacity-90 transition-all duration-300"
            >
              View Prayer Times
              <ChevronRight className="w-4 h-4 ml-2" />
            </Link>
          </div>
        </motion.div>

        {/* Daily Dua Section */}
        <motion.div 
          className="bg-white dark:bg-gray-800 rounded-2xl p-8 shadow-lg mb-16"
          initial={{ opacity: 0, y: 20 }}
          animate={{ opacity: 1, y: 0 }}
          transition={{ duration: 0.5, delay: 0.4 }}
        >
          <div className="max-w-4xl mx-auto">
            <div className="flex items-center space-x-3 mb-6">
              <Sparkles className="w-6 h-6 text-amber-500" />
              <h2 className="text-2xl font-bold text-gray-900 dark:text-white">Daily Dua</h2>
            </div>
            <div className="bg-amber-50 dark:bg-amber-900/20 p-6 rounded-xl border-l-4 border-amber-500">
              <p className="text-2xl text-gray-800 dark:text-amber-100 font-arabic text-right leading-relaxed mb-4">
                رَبَّنَا آتِنَا فِي الدُّنْيَا حَسَنَةً وَفِي الْآخِرَةِ حَسَنَةً وَقِنَا عَذَابَ النَّارِ
